div {
	width: 20%;
	height: 30%;
	border: 2px solid black;
	border-radius: 25px;
	margin: auto;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background-color: #7588b9;
	min-width: 500px;
	min-height: 300px;
	text-align: center;
}

body {
    background : #99CCFF;
}

h2 {
	text-align: center;
	#font-family: Impact;
}

input {
	display: block;
	margin: auto;
	height: 10%;
}

label {
	display: block;
	text-align: center;
	line-height: 125%;
	font-size: 1.1em;
}

.button {
	display: inline-block;
	width: 17%;
}

h1 {
	color: blue;
	display: block;
	text-align: center;
	vertical-align: top;
}
