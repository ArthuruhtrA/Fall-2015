input {
	width: 5%;
	min-width: 50px;
}

a {
	text-decoration: none;
	color: black;
	font-size: 2em;
}

body {
	background: #99CCFF;
}

td {
	height: 10%;
	width: 70%;
	background-color: #7588b9;
	border-radius: 15px;
	text-align: center;
}

td:hover {
	height: 10%;
	width: 70%;
	background-color: green;
	border-radius: 5px;
	text-align: center;
}

table {
	display: inline;
	text-align: center;
	margin-left: 3.5%;
	margin-right: 3.5%;
	border-radius: 10px;
}

div {
	margin: auto;
	text-align: center;
}
