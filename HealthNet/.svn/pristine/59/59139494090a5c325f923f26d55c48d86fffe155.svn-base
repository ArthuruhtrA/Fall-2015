a {
    text-decoration : none;
    color : black;
}

p {
    color : white;
    text-align : center;
}

h1 {
    color : white;
    text-align : center;
    font-family : Ariel, sans-serif;
    font-weight : 900;
    font-size : 3em;
}

body {
    background : #99CCFF;
}


div {
    background-color : transparent;
    margin : auto;
    padding-left : 15%;
}

#parent div {
    display: inline-block;
    background-color : transparent;
    width : 20%;
}

div.button {
    border-radius: 25px;
    background: #66AAFF;
    padding: 40px;
    width: 20%;
    height: 150px;
    margin-top : 30px;
}

div.button:hover {
    margin-top: 15px;
    padding-top : 15;
    background: green;
}

#staff:hover {
    background: blue;
}

#admin:hover {
    background: grey;
}

#cals td {
    vertical-align: top;
}

table.month {
	display: inline;
	border: 2px solid black;
	height: 50%;
	width: 50%;
}

th.day {
	border: 1px solid black;
}

td.cal {
	border: 1px solid black;
	/* width: 14%; */width: 50px;
	height: 50px;
}

p.date {
	display: block;
	text-align: left;
	color: black;
}

p.appts {
	display: block;
	margin: auto;
	color: black;
}
